<% provide(:title, 'Lista de usuarios') %>

<center><h3>Lista de Usuarios</h3></center>
<%= link_to "Crear usuario", signup_path, :class => "btn btn-success" %>

<div ALIGN=right>
  <%= form_tag(users_path, :method => "get", id: "search-form") do %>
  <%= text_field_tag :search, params[:search], placeholder: "nombre" %>
  <%= submit_tag "Buscar" %>
  <% end %>
</div>

<div class="col-xs-12">
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Numero</th>
      <th>Nombre</th>
      <th>Rol</th>
      <th>Fecha de registro</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.name %></td>
        <td><%= user.role %></td>
        <td><%= user.created_at.to_s %></td>
        <td><%= link_to 'Ver detalle', user, :class => "btn btn-info" %></td>
        <td><%= link_to 'Editar datos', edit_user_path(user), :class => "btn btn-warning" %></td>
        <td><%= link_to 'Eliminar Usuario', user, method: :delete, 
                data: { confirm: 'Esta seguro?' }, :class => "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>