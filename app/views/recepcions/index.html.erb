<center><h3>Historial de recibidos</h3></center>
<%= link_to 'Registrar nuevo', new_recepcion_path, :class => "btn btn-success" %>

<div ALIGN=right>
  <%= form_tag(recepcions_path, :method => "get", id: "search-form") do %>
  <%= text_field_tag :search, params[:search], placeholder: "nombre" %>
  <%= submit_tag "Buscar" %>
  <% end %>
</div>

<div class="col-xs-12">
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Registro NÂ°</th>
      <th>Remitente</th>
      <th>Destinatario</th>
      <th>Estado</th>
      <th>Entrada de proveidos</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @recepcions.each do |recepcion| %>

    <% if current_user.name == recepcion.username %>

      <tr>
        <td><%= recepcion.id %></td>
        <td><%= recepcion.remitente %></td>
        <td><%= recepcion.destinatario %></td>
        <td><%= recepcion.estado %></td>
        <td><%= link_to "Verificar", proveidos_path(:recepcion_id => recepcion.id),recepcion: @recepcion, :class => "btn btn-primary btn-xs" %></td>
        <td><%= link_to 'Ver detalle', recepcion, :class => "btn btn-info" %></td>
        <td><%= link_to 'Editar datos', edit_recepcion_path(recepcion), :class => "btn btn-warning" %></td>
      </tr>

    <% end %>

    <% end %>
  </tbody>
</table>

